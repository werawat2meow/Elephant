generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  leaves    Leave[]
  createdAt DateTime @default(now())
}

model Leave {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String
  startDate DateTime
  endDate   DateTime
  reason    String?
  status    String   @default("Pending")
  createdAt DateTime @default(now())
}
